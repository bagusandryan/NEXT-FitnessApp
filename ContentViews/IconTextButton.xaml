<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="redraven.ContentViews.IconTextButton"
             x:Name="This"
             Loaded="IconTextButton_OnLoaded">
    <Button x:Name="ButtonUI" BindingContext="{x:Reference This}" TextColor="{DynamicResource White}" HorizontalOptions="Start" Background="Transparent" Text="{Binding Text}" ImageSource="{Binding ImageSource}"
            ContentLayout="Left, 8">
    </Button>
</ContentView>
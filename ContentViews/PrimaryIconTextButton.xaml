<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="redraven.ContentViews.PrimaryIconTextButton"
             x:Name="This"
             Loaded="PrimaryIconTextButton_OnLoaded">
    <Button CornerRadius="30" Padding="30,12" x:Name="ButtonUI" BindingContext="{x:Reference This}" TextColor="{DynamicResource Surface}" HorizontalOptions="{Binding HorizontalOptions, Source={x:Reference This}}" Background="{DynamicResource Primary}" WidthRequest="{Binding ButtonWidth}" Text="{Binding Text}" ImageSource="{Binding ImageSource}"
            ContentLayout="Left, 8">
    </Button>
</ContentView>
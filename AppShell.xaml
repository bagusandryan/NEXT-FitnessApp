<?xml version="1.0" encoding="UTF-8" ?>
<Shell
x:Class="redraven.AppShell"
xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
xmlns:views="clr-namespace:redraven.Views"
Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <ShellContent
        Title="Home"
        Route="MainPage"
        ContentTemplate="{DataTemplate views:MainPage}"
        Icon="{OnPlatform 'home.png'}" />

        <ShellContent
        Title="History"
        IsVisible="False"
        Route="TrainingHistoryPage"
        ContentTemplate="{DataTemplate views:TrainingHistoryPage}"
        Icon="{OnPlatform 'construction.png'}" />

        <ShellContent
        Title="Programme"
        Route="ProgrammeManagerPage"
        ContentTemplate="{DataTemplate views:ProgrammeManagerPage}"
        Icon="{OnPlatform 'programmes.png'}" />

        <ShellContent
        Title="On Boarding"
        IsVisible="False"
        Route="OnBoardingPage"
        ContentTemplate="{DataTemplate views:OnBoardingPage}"
        Icon="{OnPlatform 'construction.png'}" />

        <ShellContent
        Title="Settings"
        Route="SettingsPage"
        ContentTemplate="{DataTemplate views:SettingsPage}"
        Icon="{OnPlatform 'settings.png'}" />
    </TabBar>
</Shell>